<section class="w-full bg-red-600 text-white py-16 px-4" id="contact">
  <div class=" flex flex-col md:flex-row items-center gap-12">

    <!-- Text Section (unchanged) -->
    <div class="md:w-1/2 space-y-5">
      <h2 class="text-3xl font-bold">Contact Us</h2>
      <p class="text-sm leading-relaxed">
        <i class="fas fa-envelope mr-2 text-yellow-300"></i>
        Have a question, feedback, or need help? Reach out to our support team — we're here to assist you.
      </p>
      <p class="text-sm leading-relaxed">
        <i class="fas fa-headset mr-2 text-yellow-300"></i>
        Whether you're a customer, staff, or partner — your message matters to us.
      </p>
      <p class="text-sm leading-relaxed">
        <i class="fas fa-map-marker-alt mr-2 text-yellow-300"></i>
        Based at the CCI Durban Umhlanga, but we’re always just a message away.
      </p>
    </div>

    <!-- Contact Form -->
    <div class="md:w-1/2 w-full">
      <form action="/contact" method="POST" class="space-y-6">

        <!-- Name -->
        <div>
          <label for="name" class="block text-xs font-semibold text-yellow-300 mb-1 tracking-wide">Full Name</label>
          <div class="flex items-center bg-white rounded-md shadow-sm px-3 py-2 border border-transparent
                      focus-within:border-yellow-300 focus-within:ring-1 focus-within:ring-yellow-300 transition">
            <i class="fas fa-user text-gray-400 mr-3 text-sm"></i>
            <input
              type="text"
              name="name"
              id="name"
              required
              placeholder="John Doe"
              class="w-full text-sm placeholder-gray-400 focus:outline-none bg-transparent"
            />
          </div>
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block text-xs font-semibold text-yellow-300 mb-1 tracking-wide">Email</label>
          <div class="flex items-center bg-white rounded-md shadow-sm px-3 py-2 border border-transparent
                      focus-within:border-yellow-300 focus-within:ring-1 focus-within:ring-yellow-300 transition">
            <i class="fas fa-envelope text-gray-400 mr-3 text-sm"></i>
            <input
              type="email"
              name="email"
              id="email"
              required
              placeholder="you@example.com"
              class="w-full text-sm placeholder-gray-400 focus:outline-none bg-transparent"
            />
          </div>
        </div>

        <!-- Message -->
        <div>
          <label for="message" class="block text-xs font-semibold text-yellow-300 mb-1 tracking-wide">Message</label>
          <textarea
            name="message"
            id="message"
            rows="4"
            required
            placeholder="Your message here..."
            class="w-full text-sm placeholder-gray-400 px-3 py-2 rounded-md shadow-sm border border-transparent
                   bg-white focus:outline-none focus:ring-1 focus:ring-yellow-300 focus:border-yellow-300 transition resize-none"
          ></textarea>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="inline-flex items-center gap-2 bg-yellow-300 text-red-600 font-semibold
                 px-5 py-2 rounded-md shadow-sm hover:bg-yellow-400 hover:text-red-700 transition text-sm"
        >
          <i class="fas fa-paper-plane"></i> Send Message
        </button>

      </form>
    </div>
  </div>
</section>


